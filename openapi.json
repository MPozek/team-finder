{
  "openapi": "3.0.0",
  "info": {
    "title": "GDL Team Finder - API",
    "description": "The Team Finder API handles the creation, management and administration of Teams within the project.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://{{api_address}}"
    },
    {
      "url": "https://discordapp.com"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Admin"
    },
    {
      "name": "Posts",
      "description": "The /teams resource handles everything for the concept of a \"Team\" - an entity which groups a set of participants together. A Team advertises itself as \"Looking for Skills\" from jam participants."
    },
    {
      "name": "Discord"
    },
    {
      "name": "Discord > Bot"
    },
    {
      "name": "Users"
    },
    {
      "name": "Favourites"
    }
  ],
  "paths": {
    "/admin/reports": {
      "get": {
        "tags": [
          "Admin"
        ],
        "summary": "List Reported Posts",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/admin/reports/clear": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Delete Team",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "teamId": 3
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/admin/user/ban": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Ban User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "discordId": "427486675409829898",
                  "adminId": "427486675409829898"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/admin/user/unban": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Unban User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "discordId": "427486675409829898",
                  "adminId": "427486675409829898"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/posts": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "List Posts",
        "description": "Get a list of all teams.\n\nTODO: limiting, pagination, filtering etc.",
        "parameters": [
          {
            "name": "description",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "mame"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "Create Post",
        "description": "Create a new Team",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "author": "TestValue",
                  "authorId": "TestValue",
                  "description": "TestValue",
                  "skillsPossessed": [
                    "ART_3D",
                    "CODE"
                  ],
                  "skillsSought": [
                    "OTHER"
                  ],
                  "preferredTools": [
                    "UNITY"
                  ],
                  "availability": "PART_TIME",
                  "timezoneStr": "UTC",
                  "languages": [
                    "en",
                    "jp"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/posts/{TEAM_ID}": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get Specific Post",
        "description": "Get a specific team by internal ID. Currently used for development purposes only.",
        "parameters": [
          {
            "name": "TEAM_ID",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/posts/mine": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get My Post",
        "description": "A less exploitable reference for a logged-in user to view their own Team.\n\nUsed when showing the Manage Team page, to populate form fields.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "put": {
        "tags": [
          "Posts"
        ],
        "summary": "Update My Post",
        "description": "Update a Team with the details a participant is able to change.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "description": "TestValue2",
                  "languages": "TestValue2",
                  "skillsPossessed": null,
                  "skillsSought": null,
                  "preferredTools": null,
                  "availability": null,
                  "timezoneStr": null
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Posts"
        ],
        "summary": "Delete My Post",
        "description": "Update a Team with the details a participant is able to change.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/posts/report": {
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "Report Post",
        "description": "Report a Team as breaking site rules.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "teamId": 99999
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/bot/dm": {
      "post": {
        "tags": [
          "Discord > Bot"
        ],
        "summary": "Send Channel DM request to bot",
        "requestBody": {
          "content": {}
        },
        "parameters": [
          {
            "name": "recipientUserId",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "example": "91969935848251392"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/@me": {
      "get": {
        "tags": [
          "Discord"
        ],
        "summary": "User Info",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/@me/guilds/825085959132807269/member": {
      "get": {
        "tags": [
          "Discord"
        ],
        "summary": "GDL Server User Info",
        "security": [
          {
            "bearerAuth": []
          }
        ],
